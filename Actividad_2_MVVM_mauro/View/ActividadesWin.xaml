<Window x:Class="Actividad_2_MVVM_mauro.View.ActividadesWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Actividad_2_MVVM_mauro.View"
        xmlns:viewmodel="clr-namespace:Actividad_2_MVVM_mauro.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:ActividadesViewModel}"
        mc:Ignorable="d"
        Title="ActividadesWin" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:ActividadesViewModel/>
    </Window.DataContext>

    <Grid Background="#E9EDF2">
        <Border Background="#FFFFFF" CornerRadius="12" Padding="20" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Gestión de Actividades" FontSize="26" FontWeight="Bold" Foreground="#1F2937" Margin="5,0,0,15"/>

                <Border Grid.Row="1" Background="#F5F7FA" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Nombre" Grid.Row="0" Grid.Column="0" Margin="0,4,5,4"/>
                        <TextBox x:Name="txtNombre"
                                 Text="{Binding Nombre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Row="0" Grid.Column="1" Height="26" Margin="0,4,40,4" Grid.ColumnSpan="2"/>

                        <TextBlock Text="Aforo Maximo" Grid.Row="0" Grid.Column="3" Margin="0,4,5,4"/>
                        <TextBox x:Name="txtAforo"
                                 Text="{Binding AforoMax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Row="0" Grid.Column="4" Height="26" Margin="0,4,0,4"/>
                    </Grid>
                </Border>

                <DataGrid x:Name="dgActividades"
                          ItemsSource="{Binding Actividades}"
                          SelectedItem="{Binding SelectedActividad, Mode=TwoWay}"
                          Grid.Row="2"
                          IsReadOnly="True"
                          AutoGenerateColumns="True"
                          CanUserAddRows="False"
                          Margin="0,0,0,15"/>

                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/><ColumnDefinition/><ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnAñadir" Command="{Binding AgregarActividad}" Grid.Column="0" Content="Añadir" Height="38" Background="#D1FAE5" BorderBrush="#10B981" Margin="5"/>
                    <Button x:Name="btnModificar" Command="{Binding EditarActividad}" Grid.Column="1" Content="Modificar" Height="38" Background="#FEF3C7" BorderBrush="#F59E0B" Margin="5"/>
                    <Button x:Name="btnEliminar" Command="{Binding BorrarActividad}" Grid.Column="2" Content="Eliminar" Height="38" Background="#FEE2E2" BorderBrush="#EF4444" Margin="5"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
